<UserControl x:Class="JustAnotherExpenseTracker.Views.UserControls.CustomDoughnutChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JustAnotherExpenseTracker.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="customDoughnutChart">
    <Grid>
        <TextBlock Text="{Binding ElementName=customDoughnutChart, Path=displayValue}"
                   Foreground="{StaticResource creditCardPageTextColor}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="15"
                   FontFamily="Microsoft Sans Serif"
           />
        <TextBlock Text="{Binding ElementName=customDoughnutChart, Path=displayText}"
                   Foreground="{Binding ElementName=customDoughnutChart, Path=displayTextColor}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="12"
                   FontFamily="Microsoft Sans Serif"
                   Margin="0 60 0 0"
                   />
    </Grid>
</UserControl>
